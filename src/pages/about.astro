---
import { getCanonical, getPermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';
import Company from '~/components/widgets/AboutCompany.astro';
import Team from '~/components/widgets/Team.astro';
import Contributors from '~/components/widgets/Contributors.astro';

const meta = {
  title: `About us`,
  description: `Learn more about us.`,
  canonical: getCanonical(getPermalink('/about/')),
};
---

<Layout {meta}>
  <Company />
  <Team />
  <Contributors />
</Layout>
