---
import { Image } from '@astrojs/image/components';

const items = [
  [
    {
      name: 'ptr1337',
      description:
        'Founder, Developer',
      avatar: import('~/assets/images/ptr1337_avatar.png'),
    },
    {
      name: 'vnepogodin',
      description:
        'Founder, Developer',
      avatar: import('~/assets/images/cpp_code.jpg'),
    },
    {
      name: 'sirlucjan',
      description:
        'Kernel maintainer, University lecturer from Poland',
      avatar: import('~/assets/images/binary-code.jpg'),
    },
  ],
];

---

<section class="py-28 overflow-hidden" id="team">
  <div class="container px-4 mx-auto">
    <h2 class="mb-20 text-6xl md:text-8xl xl:text-10xl text-center font-bold font-heading tracking-px-n leading-none" data-config-id="auto-txt-1-6">Meet our team!</h2>
    {
      items.map((subitems) => (
        <div class="max-w-5xl mx-auto">
          <div class="flex flex-wrap -m-3">
            {subitems.map(({ name, description, avatar }) => (
              <div class="w-full md:w-1/3 p-3">
                <div class="max-w-max mx-auto">
                  <div class="mb-6 max-w-max overflow-hidden rounded-3xl">
                    <Image
                      src={avatar}
                      class="transform hover:scale-105 transition ease-in-out duration-1000"
                      quality={100}
                      alt="Avatar"
                      aspectRatio={512 / 512}
                      loading="eager"
                      width={512}
                      height={512}
                    />
                  </div>
                  <h3 class="mb-1 text-lg font-bold font-heading leading-snug">{name}</h3>
                  <p class="font-medium text-gray-600 dark:text-gray-400" data-config-id="auto-txt-3-6">{description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</section>
