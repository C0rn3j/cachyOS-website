---
import Image from '~/components/common/Image.astro';
import { Icon } from 'astro-icon/components';

const items = [
  [
    {
      name: 'Peter Jung (ptr1337)',
      description: 'Founder, Developer',
      avatar: '~/assets/images/ptr1337_avatar.png',
      github_url: 'https://github.com/ptr1337',
    },
    {
      name: 'Vladislav Nepogodin (vnepogodin)',
      description: 'Founder, Developer',
      avatar: '~/assets/images/cpp_code.jpg',
      github_url: 'https://github.com/vnepogodin',
    },
    {
      name: 'Piotr Gorski (sir_lucjan)',
      description: 'Kernel maintainer, University lecturer from Poland',
      avatar: '~/assets/images/binary-code.jpg',
      github_url: 'https://github.com/sirlucjan',
    },
  ],
];
---

<section class="py-28 overflow-hidden" id="team">
  <div class="container px-4 mx-auto">
    <h2
      class="mb-20 text-6xl md:text-8xl xl:text-10xl text-center font-bold font-heading tracking-px-n leading-none"
      data-config-id="auto-txt-1-6"
    >
      Meet our team!
    </h2>
    {
      items.map((subitems) => (
        <div class="max-w-5xl mx-auto">
          <div class="flex flex-wrap -m-3">
            {subitems.map(({ name, description, avatar, github_url }) => (
              <div class="w-full md:w-1/3 p-3">
                <div class="max-w-max mx-auto">
                  <div class="mb-6 max-w-max overflow-hidden rounded-3xl">
                    <Image
                      src={avatar}
                      class="transform hover:scale-105 transition ease-in-out duration-1000"
                      quality={100}
                      alt="Avatar"
                      aspectRatio={512 / 512}
                      loading="eager"
                      width={512}
                      height={512}
                    />
                  </div>
                  <h3 class="mb-1 text-lg font-bold font-heading leading-snug">{name}</h3>
                  <p
                    class="font-medium text-gray-600 dark:text-gray-400"
                    data-config-id="auto-txt-3-6"
                  >
                    {description}
                  </p>
                  <a
                    class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
                    aria-label="Github"
                    href={github_url}
                  >
                    <Icon name="tabler:brand-github" class="w-5 h-5" />
                  </a>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</section>
